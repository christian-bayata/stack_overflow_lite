{
  "name": "stack_overflow_lite",
  "version": "1.0.0",
  "description": "An app that contains some basic features of stack overflow",
  "main": "app.ts",
  "scripts": {
    "dev": "tsnd --respawn ./src/app.ts",
    "test": "export NODE_ENV=test && NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --coverage --verbose --forceExit --detectOpenHandles"
  },
  "author": "Edomaruse, Frank",
  "license": "ISC",
  "devDependencies": {
    "@types/amqplib": "^0.8.2",
    "@types/bcrypt": "^5.0.0",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.6",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.12",
    "jest": "^29.0.3",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.2.1",
    "amqplib": "^0.10.2",
    "bcrypt": "^5.0.1",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "elasticsearch": "^16.7.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.7",
    "sequelize": "^6.21.3"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "globalTeardown": "./src/tests/test-teardown-globals.ts"
  }
}
